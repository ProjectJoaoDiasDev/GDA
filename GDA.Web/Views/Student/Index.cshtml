@model List<GDA.Domain.ViewModel.StudentViewModel>
@{
    ViewData["Title"] = "Estudantes";
    Layout = "_Layout";
}

<div class="row">
    <div class="card text-white bg-dark">
        <div class="card-header">
            <a type="button" href="/Student/New" id="btn-new" class="btn">Cadastrar Estudante</a>
        </div>
        <div class="card-body">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Turma</th>
                        <th scope="col">Contato</th>
                        <th scope="col">Responsável</th>
                        <th scope="col">Data de Nascimento</th>
                        <th scope="col">CPF</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null)
                    {
                        <h1>Sem Estudantes Cadastrados.</h1>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.SchoolClass</td>
                                <td>@item.ContactNumberMain</td>
                                <td>@item.Responsible</td>
                                <td>@item.BirthDate</td>
                                <td>@item.CPF</td>
                                <td>
                                    <div class="m-1">
                                        <a class="btn btn-outline-secondary" title="Editar Cadastro Estudante" type="button" id="buttonEditStudent" href="/Student/Edit?id=@(item.Id)"><i class="fas fa-edit"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>