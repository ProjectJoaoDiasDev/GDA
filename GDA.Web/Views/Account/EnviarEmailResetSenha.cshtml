@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login GDA</title>

    <link rel="icon" type="image/x-icon" href="~/images/favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <script src="/js/vue.global.js"></script>
    <script src="/js/jquery.min.js"></script>

</head>
<body>
    <div id="viewRedefinir-senha" style="height: 100vh;">
        <div class="container" style="height: 100%;">
            <div class="row d-flex justify-content-center align-items-center" style="height: 100%">
                <div class="col-lg-6 text-dark">
                    <div v-if="postResetEnviado">
                        <h5 class="text-center text-success">Link de recuperação enviado</h5>
                        <p class="mt-3 text-center" style="font-size: 13px;">
                            Acesse seu e mail e clique no link enviado para recuperar sua conta.
                        </p>
                        <a class="link mt-3" href="javascript:history.back()" style="color: rgb(39, 96, 172); cursor: pointer;"><i class="bi bi-arrow-left"></i> Voltar</a>
                    </div>
                    <div class="card p-3" v-else>
                        <div class="card-header" style="background: #fff;">
                            <div class="card-title">
                                <h5 class="text-center">
                                    Redefinir senha
                                </h5>
                            </div>
                        </div>
                        <div class="card-body">
                            <input v-model="email" type="text" style="font-size: 14px;" class="form-control p-2" placeholder="Informe seu email" />
                            <p style="font-size: 14px" id="erro" class="text-danger d-none mt-2"></p>
                            <button v-on:click="postEmailRecuperacao()" class="btn btn-primary w-100 mt-3">Enviar link de recuperação</button>
                        </div>
                        <a class="link mt-3" href="/" style="color: rgb(39, 96, 172); cursor: pointer;"><i class="bi bi-arrow-left"></i> Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="~/js/Account/ResetPassword.js"></script>